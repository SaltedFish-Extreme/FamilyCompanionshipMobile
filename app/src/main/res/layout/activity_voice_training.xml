<?xml version="1.0" encoding="utf-8"?><!--开启声音训练页面-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7ff"
    tools:context=".ui.activity.VoiceTrainingActivity">

    <ImageView
        android:id="@+id/voice_train"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_voice_train" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_40"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="@+id/voice_train"
        app:layout_constraintEnd_toEndOf="@+id/voice_train"
        app:layout_constraintStart_toStartOf="@+id/voice_train"
        app:layout_constraintTop_toTopOf="@+id/voice_train"
        app:srcCompat="@drawable/ic_voice_train" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/voice_train_text"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="@dimen/sp_24"
        app:layout_constraintBottom_toBottomOf="@+id/voice_train"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>