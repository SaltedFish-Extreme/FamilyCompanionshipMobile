<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.SettingActivity">

    <ImageView
        android:id="@+id/comeback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_66"
        android:contentDescription="@null"
        android:foreground="?selectableItemBackground"
        android:padding="@dimen/dp_10"
        app:srcCompat="@drawable/ic_btn_back" />

    <com.hisense.sound.widget.view.DrawableTextView
        android:id="@+id/sound_management"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/comeback"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_50"
        android:drawableStart="@drawable/ic_flag"
        android:drawablePadding="@dimen/dp_7"
        android:text="@string/sound_management"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="@dimen/sp_20"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_300"
        android:layout_below="@+id/sound_management"
        android:layout_margin="@dimen/dp_20" />


    <ImageView
        android:id="@+id/exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_80"
        app:srcCompat="@drawable/ic_btn_exit" />

</RelativeLayout>