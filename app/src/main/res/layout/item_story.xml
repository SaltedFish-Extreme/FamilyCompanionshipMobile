<?xml version="1.0" encoding="utf-8"?><!--故事列表item-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/dp_10"
    android:layout_marginStart="@dimen/dp_12"
    android:layout_marginEnd="@dimen/dp_15">

    <TextView
        android:id="@+id/story_text"
        android:layout_width="@dimen/dp_120"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dp_8"
        android:singleLine="true"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="@dimen/sp_20"
        tools:text="@string/story_text" />

    <ImageView
        android:id="@+id/story_spectrum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/story_text"
        android:contentDescription="@null"
        android:src="@drawable/ic_play_spectrum" />

    <TextView
        android:id="@+id/story_composite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_toStartOf="@id/story_play"
        android:background="@drawable/bg_composite"
        android:gravity="center"
        android:text="@string/composite"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_18"
        tools:ignore="RelativeOverlap" />

    <TextView
        android:id="@+id/story_synthesized"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_toStartOf="@id/story_play"
        android:background="@drawable/bg_synthesized"
        android:gravity="center"
        android:text="@string/synthesized"
        android:textColor="@color/color_synthesized"
        android:textSize="@dimen/sp_18"
        android:visibility="invisible"
        tools:ignore="RelativeOverlap" />

    <ImageView
        android:id="@+id/story_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:contentDescription="@null"
        tools:src="@drawable/btn_play_disabled" />

</RelativeLayout>